pacman -S nvidia  nvidia-utils nvidia-settings cuda nvidia-dkms lib32-nvidia-utils xorg-server xorg-xinit arc-icon-theme arc-solid-gtk-theme

mkdir /etc/pacman.d/hooks/

vim /etc/pacman.d/hooks/nvidia.hook

[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target=nvidia

[Action]
Depends=mkinitcpio
When=PostTransaction
Exec=/usr/bin/mkinitcpio -P

sudo echo blacklist nouveau >> /etc/modprobe.d/nvidia.conf


sudo vim /etc/mkinitcpio.conf
MODULES=(fuse ext4 nvidia nvidia_modeset nvidia_uvm nvidia_drm)
HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)

sudo vim /etc/default/grub
GRUB_CMDLINE_LINUX_DEFAULT="nvidia-drm.modeset=1 quiet"

